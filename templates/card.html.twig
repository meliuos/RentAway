<div class="card" id="{{ id }}">
    {% if badgeText %}
        <div class="card--badge">{{ badgeText }}</div>
    {% endif %}
    <img
            src="{{ coverImg }}"
            class="card--image"
            alt="{{ description }}"
    />
    <div class="card--stats">
        <span>{{ rating }}</span>
        <span class="gray">({{ reviewCount }}) â€¢ </span>
        <span class="gray">{{ location }}</span>
    </div>
    <p class="card--title">{{ title }}</p>
    <p class="card--price">
        <span class="bold">From ${{ price }}</span> / night
    </p>
    {% if user is defined and user %}
        <div class="card--actions text-center" style="margin-bottom: 5px;">
            <div class="card--price">Open spots: {{ openSpots }}</div>
            <div class="card--actions text-center">
                <a href="{{ path('add_spot', {'id': id}) }}" class="btn btn-outline-success" style="width: 40%;">Increase</a>
                <a href="{{ path('remove_spot', {'id':id}) }}" class="btn btn-outline-danger" style="width: 40%;">Decrease</a>
            </div>

        </div>

        <div class="card--actions text-center" style="margin-bottom: 5px;" >
            <a class="btn btn-primary" style="width: 40%;" href="{{ path('update_post', {'id': id}) }}">Edit</a>
            <a class="btn btn-danger" style="width: 40%;"  href="{{ path('delete_post', {'id': id}) }}">Delete</a>
        </div>

    {% endif %}
    {% if admin is defined and admin %}
        <div class="card--actions text-center" style="margin-bottom: 20px;">
            <a class="btn btn-danger" style="width: 50%;"  href="{{ path('delete_post',{'id':id}) }}">Delete</a>
        </div>
    {% endif %}
</div>
