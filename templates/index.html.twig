{% extends 'base.html.twig' %}
 
{% block stylesheets %}
    <link rel="stylesheet" href={{ asset('css/card.css') }}>
    <link rel="stylesheet" href={{ asset('css/Hero.css') }}>
    <link rel="stylesheet" href={{ asset('css/style.css') }}>
    <link rel="stylesheet" href={{ asset('css/navbar.css') }}>
    <link rel="stylesheet" href={{ asset('node_modules/bootstrap/dist/css/bootstrap.css') }}>
{% endblock %}
 
{% block javascripts %}
{% endblock %}

{% block title %}Home{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}
{% include 'hero.html.twig' %}
<div class="cards-list" id='cards-list'>
{% for apart in aparts %}
{% set badgeText = (apart.openSpots > 0) ? 'Available now!' : 'Not Available!' %}
    {% include 'card.html.twig' with {
        'id': apart.id,
        'title': apart.title,
        'description': apart.description,
        'price': apart.price,
        'coverImg': apart.coverImg,
        'rating': apart.rating,
        'reviewCount': apart.reviewCount,
        'location': apart.location,
        'openSpots': apart.openSpots,
        'badgeText': badgeText
    } %}
{% endfor %}
</div>
{% endblock %}